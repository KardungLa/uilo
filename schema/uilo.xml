<rdf:RDF xmlns:dc="http://purl.org/dc/elements/1.1/" xmlns:dct="http://purl.org/dc/terms/" xmlns:uilo="https://danielschlager.at/uilo/schema#" xmlns:foaf="http://xmlns.com/foaf/0.1/" xmlns:owl="http://www.w3.org/2002/07/owl#" xmlns:rdf="http://www.w3.org/1999/02/22-rdf-syntax-ns#" xmlns:rdfs="http://www.w3.org/2000/01/rdf-schema#" xmlns:skos="http://www.w3.org/2004/02/skos/core#" xmlns:xsd="http://www.w3.org/2001/XMLSchema#">
  <owl:Ontology rdf:about="https://danielschlager.at/uilo/schema">
    <dc:title>User Interface and Layout Ontology (UILO)</dc:title>
    <rdfs:label>User Interface and Layout Ontology (UILO)</rdfs:label>
    <rdfs:comment>
      This is a generic user interface and layout ontology. Currently used for the Angular Page Builder. It serves the description of elements lined up in a grid or a custom layout and provides detailed
      layout information.
    </rdfs:comment>
    <owl:versionInfo rdf:datatype="http://www.w3.org/2001/XMLSchema#string">0.1</owl:versionInfo>
    <dc:creator>Daniel Schlager</dc:creator>
    <owl:versionInfo>2019-05-08 - First draft
    </owl:versionInfo>
    <owl:versionInfo>2019-08-15 - Published
    </owl:versionInfo>
  </owl:Ontology>

  <!--
      ****************************  Main Classes  ***************************************
  -->

  <owl:Class rdf:about="https://danielschlager.at/uilo/schema#Layout">
  </owl:Class>

  <owl:Class rdf:about="https://danielschlager.at/uilo/schema#GridLayout">
    <rdfs:subClassOf rdf:resource="https://danielschlager.at/uilo/schema#Layout"></rdfs:subClassOf>
    <rdfs:comment>A grid layout that can be part of a Layout</rdfs:comment>
  </owl:Class>

  <owl:Class rdf:about="https://danielschlager.at/uilo/schema#CustomLayout">
    <rdfs:subClassOf rdf:resource="https://danielschlager.at/uilo/schema#Layout"></rdfs:subClassOf>
    <rdfs:comment>A custom layout that can be part of a Layout</rdfs:comment>
  </owl:Class>

  <owl:Class rdf:about="https://danielschlager.at/uilo/schema#LayoutItem">
    <rdfs:subClassOf rdf:resource="https://danielschlager.at/uilo/schema#GridLayout"></rdfs:subClassOf>
    <rdfs:subClassOf rdf:resource="https://danielschlager.at/uilo/schema#CustomLayout"></rdfs:subClassOf>
    <rdfs:comment>A grid layout that can be part of a Layout</rdfs:comment>
  </owl:Class>

  <owl:Class rdf:about="https://danielschlager.at/uilo/schema#Component">
    <rdfs:subClassOf rdf:resource="https://danielschlager.at/uilo/schema#LayoutItem"></rdfs:subClassOf>
    <rdfs:comment>A component that can be part of a Layout</rdfs:comment>
  </owl:Class>

  <owl:Class rdf:about="https://danielschlager.at/uilo/schema#ComponentConfiguration">
    <rdfs:subClassOf rdf:resource="https://danielschlager.at/uilo/schema#Component"></rdfs:subClassOf>
    <rdfs:comment>A component configuration</rdfs:comment>
  </owl:Class>

  <owl:Class rdf:about="https://danielschlager.at/uilo/schema#Element">
    <rdfs:subClassOf rdf:resource="https://danielschlager.at/uilo/schema#Component"></rdfs:subClassOf>
    <rdfs:comment>An element inside a component</rdfs:comment>
  </owl:Class>

  <!--
      ****************************  Component Classes  **********************************
  -->

  <owl:Class rdf:about="https://danielschlager.at/uilo/schema#CustomComponent">
    <rdfs:subClassOf rdf:resource="https://danielschlager.at/uilo/schema#Component"></rdfs:subClassOf>
    <rdfs:comment>A custom component</rdfs:comment>
  </owl:Class>

  <owl:Class rdf:about="https://danielschlager.at/uilo/schema#HelloWorldComponent">
    <rdfs:subClassOf rdf:resource="https://danielschlager.at/uilo/schema#Component"></rdfs:subClassOf>
    <rdfs:comment>We always need a hello world component!</rdfs:comment>
  </owl:Class>

  <!--
      **************************** Element Classes  ******************************
  -->

  <owl:Class rdf:about="https://danielschlager.at/uilo/schema#Heading">
    <rdfs:subClassOf rdf:resource="https://danielschlager.at/uilo/schema#Element"></rdfs:subClassOf>
    <rdfs:comment>A heading element</rdfs:comment>
  </owl:Class>

  <owl:Class rdf:about="https://danielschlager.at/uilo/schema#Menu">
    <rdfs:subClassOf rdf:resource="https://danielschlager.at/uilo/schema#Element"></rdfs:subClassOf>
    <rdfs:comment>A menu element</rdfs:comment>
  </owl:Class>

  <owl:Class rdf:about="https://danielschlager.at/uilo/schema#MenuItem">
    <rdfs:subClassOf rdf:resource="https://danielschlager.at/uilo/schema#Menu"></rdfs:subClassOf>
    <rdfs:comment>A menu item inside a menu element</rdfs:comment>
  </owl:Class>


  <!--
      ****************************  Properties  ************************************
      ****************************    of Layout  ***********************************
  -->

  <owl:ObjectProperty rdf:about="https://danielschlager.at/uilo/schema#hasLayout">
   <owl:inverseOf rdf:resource="https://danielschlager.at/uilo/schema#isLayoutOf"></owl:inverseOf> 
    <rdfs:domain rdf:resource="https://danielschlager.at/uilo/schema#Layout"></rdfs:domain>
    <rdfs:comment></rdfs:comment>
  </owl:ObjectProperty>

  <owl:ObjectProperty rdf:about="https://danielschlager.at/uilo/schema#hasLayoutItem">
   <owl:inverseOf rdf:resource="https://danielschlager.at/uilo/schema#isLayoutItemOf"></owl:inverseOf> 
    <rdfs:domain rdf:resource="https://danielschlager.at/uilo/schema#GridLayout"></rdfs:domain>
    <rdfs:comment></rdfs:comment>
  </owl:ObjectProperty>

  <!--
      ****************************  Properties  ************************************
      ****************************    of LayoutItem  *******************************
  -->

  <owl:DatatypeProperty rdf:about="https://danielschlager.at/uilo/schema#hasCols">
    <rdfs:domain rdf:resource="https://danielschlager.at/uilo/schema#LayoutItem"></rdfs:domain>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#integer"></rdfs:range>
  </owl:DatatypeProperty>

  <owl:DatatypeProperty rdf:about="https://danielschlager.at/uilo/schema#hasRows">
    <rdfs:domain rdf:resource="https://danielschlager.at/uilo/schema#LayoutItem"></rdfs:domain>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#integer"></rdfs:range>
  </owl:DatatypeProperty>

  <owl:DatatypeProperty rdf:about="https://danielschlager.at/uilo/schema#hasX">
    <rdfs:domain rdf:resource="https://danielschlager.at/uilo/schema#LayoutItem"></rdfs:domain>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#integer"></rdfs:range>
  </owl:DatatypeProperty>

  <owl:DatatypeProperty rdf:about="https://danielschlager.at/uilo/schema#hasY">
    <rdfs:domain rdf:resource="https://danielschlager.at/uilo/schema#LayoutItem"></rdfs:domain>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#integer"></rdfs:range>
  </owl:DatatypeProperty>

  <owl:ObjectProperty rdf:about="https://danielschlager.at/uilo/schema#hasComponent">
   <owl:inverseOf rdf:resource="https://danielschlager.at/uilo/schema#isComponentOf"></owl:inverseOf> 
    <rdfs:domain rdf:resource="https://danielschlager.at/uilo/schema#LayoutItem"></rdfs:domain>
    <rdfs:comment></rdfs:comment>
  </owl:ObjectProperty>

  <!--
      ****************************  Properties  ************************************
      ****************************    of Component  ********************************
  -->

  <owl:DatatypeProperty rdf:about="https://danielschlager.at/uilo/schema#hasComponentRef">
    <rdfs:domain rdf:resource="https://danielschlager.at/uilo/schema#Component"></rdfs:domain>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"></rdfs:range>
    <rdfs:comment>This is the reference to your internal component name or the corresponding id</rdfs:comment>
  </owl:DatatypeProperty>

  <owl:ObjectProperty rdf:about="https://danielschlager.at/uilo/schema#hasComponentConfiguration">
   <owl:inverseOf rdf:resource="https://danielschlager.at/uilo/schema#isComponentConfigurationOf"></owl:inverseOf> 
    <rdfs:domain rdf:resource="https://danielschlager.at/uilo/schema#Component"></rdfs:domain>
    <rdfs:comment>Every component can have a custom configuration</rdfs:comment>
  </owl:ObjectProperty>


  <!--
      ****************************  Properties  ************************************
      ****************************    of ComponentConfiguration  *******************
  -->

  <owl:DatatypeProperty rdf:about="https://danielschlager.at/uilo/schema#hasTitle">
    <rdfs:domain rdf:resource="https://danielschlager.at/uilo/schema#ComponentConfiguration"></rdfs:domain>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"></rdfs:range>
    <rdfs:comment>Title of the component</rdfs:comment>
  </owl:DatatypeProperty>

  <owl:DatatypeProperty rdf:about="https://danielschlager.at/uilo/schema#hasDescription">
    <rdfs:domain rdf:resource="https://danielschlager.at/uilo/schema#ComponentConfiguration"></rdfs:domain>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"></rdfs:range>
    <rdfs:comment>Description of the component</rdfs:comment>
  </owl:DatatypeProperty>

  <owl:DatatypeProperty rdf:about="https://danielschlager.at/uilo/schema#hasCustomOptions">
    <rdfs:domain rdf:resource="https://danielschlager.at/uilo/schema#ComponentConfiguration"></rdfs:domain>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"></rdfs:range>
    <rdfs:comment>JSON comes here</rdfs:comment>
  </owl:DatatypeProperty>

  <owl:DatatypeProperty rdf:about="https://danielschlager.at/uilo/schema#hasCustomStylesheet">
    <rdfs:domain rdf:resource="https://danielschlager.at/uilo/schema#ComponentConfiguration"></rdfs:domain>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"></rdfs:range>
    <rdfs:comment>CSS comes here</rdfs:comment>
  </owl:DatatypeProperty>

  <owl:DatatypeProperty rdf:about="https://danielschlager.at/uilo/schema#hasCustomStylesheetUri">
    <rdfs:domain rdf:resource="https://danielschlager.at/uilo/schema#ComponentConfiguration"></rdfs:domain>
    <rdfs:range rdf:resource="http://www.w3.org/2001/XMLSchema#string"></rdfs:range>
    <rdfs:comment>URI to the corresponding stylesheet</rdfs:comment>
  </owl:DatatypeProperty>

</rdf:RDF>
